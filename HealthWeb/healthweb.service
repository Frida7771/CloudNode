[Unit]
Description=Node.js Web Application
After=network.target

[Service]
User=ec2-user
Group=ec2-user
WorkingDirectory=/home/ec2-user/webapp/app
ExecStart=/usr/bin/node /home/ec2-user/webapp/app/app.js
Restart=always
Environment=NODE_ENV=production
Environment=PORT=3000

[Install]
WantedBy=multi-user.target
